{% extends 'base.html.twig' %}
{% block title %}Voir les prestations{% endblock %}
{% block body %}

<body>

<section>
    <div class="rubriquePrestations">Voici nos prestations techniques de rénovation énergétique :</div>
</section>

<section class="sixprestations">
    {% for prestation in prestations %}
    <div class="isoP"><a href="#{{ prestation.title }}">{{ prestation.title }}</a></div>
    {% endfor %}
</section>

<main>
<section class="myPrestations">
     {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-success" href="{{ path('addPresta') }}">Créer une prestation</a> {% endif %}
     {% for prestation in prestations %}
    <article id="str_replace({{prestation.title}})">
        <h1 class="titleItem">{{ prestation.title }}</h1>

        <div class="prestaTxtBtn card text-center">
            <div class="presta text-bg-success text-center align-items-center mb-3 ">
               <div class="width: 500px img-fluid"><img class="imageOperations" src="{{ asset('asset/img/img_operation/'~prestation.img.title) }}" alt="image d'opérations énergétiques"></div>
                <p>{{ prestation.description }}</p>
            </div>
            <a class="btn btn-success" href="{{ path('prestation', {'title': prestation.title}) }}">Voir notre prestation</a>
        </div>

        <div class="adminControl">
            {% if is_granted('ROLE_ADMIN') %}<a class="btnUpdatePresta btn btn-success" href="{{ path('updatePresta', {'title': prestation.title}) }}">Modifier Prestation</a>{% endif %}
            {% if is_granted('ROLE_ADMIN') %} <button class="del btn btn-danger">Supprimer prestation</button>{% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="modal">
                    {#  {{ dump(prestation.title) }}#}
                    <p>Voulez-vous vraiment supprimer la prestation ?</p>
                    <button class="cancel btn btn-primary" >Annuler</button>
                    {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-danger" href="{{ path('removePresta', {'title': prestation.title}) }}">Supprimer</a>{% endif %}
                </div>
            {% endif %}
        </div>
    </article>
            {% endfor %}
</section>
</main>

</body>
        <script src="{{ asset("asset/js/modalAdminDeletePrestations.js") }}"></script>
{% endblock %}